{
  "compileOnSave": true,
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "jsx": "react",
      "baseUrl" : ".",
      "sourceMap" : true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "types": ["node"],
      "lib": ["dom", "ES2015", "ESNext"],
      "stripInternal": true,
      "declaration": false,
      "rootDir" : "./src",
      "outDir" : "./dist",
      "removeComments": true,
      "allowJs": false,
      "paths": {
        "~/*": [
          "src/*"
        ],
        "tslib": [
          "node_modules/tslib/tslib.d.ts"
        ]
      }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}